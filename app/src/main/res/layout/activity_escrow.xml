<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="@string/quay_l_i" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/qu_n_l_b_o_v_thanh_to_n"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:contentDescription="@string/l_m_m_i" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Payment Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/th_ng_tin_giao_d_ch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/tvPaymentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/m_giao_d_ch_12345"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tvEscrowStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/tr_ng_th_i_ang_b_o_v"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDaysRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/th_i_gian_b_o_v_5_ng_y"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:paddingBottom="8dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvHoldUntil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/b_o_v_n_2024_01_15"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Escrow Explanation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/b_o_v_thanh_to_n_l_g"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/ti_n_c_gi_an_to_n_trong_7_ng_y_n_b_n_x_c_nh_n_thanh_to_n_khi_h_i_l_ng_n_b_o_c_o_tranh_ch_p_n_u_c_v_n_n_ho_n_ti_n_t_ng_n_u_c_tranh_ch_p"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnReleasePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="@string/ch_p_nh_n_thanh_to_n"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_primary_background"
                    android:padding="16dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnReportDispute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/b_o_c_o_tranh_ch_p"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_warning_background"
                    android:padding="16dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
