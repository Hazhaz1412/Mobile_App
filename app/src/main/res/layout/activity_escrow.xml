<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Quay lại" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="🔒 Quản lý bảo vệ thanh toán"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Làm mới" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Payment Info Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📋 Thông tin giao dịch"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:id="@+id/tvPaymentId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã giao dịch: #12345"
                        android:textSize="14sp"
                        android:textColor="#424242"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tvEscrowStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trạng thái: 🔒 Đang bảo vệ"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#2E7D32"
                        android:paddingBottom="8dp" />

                    <TextView
                        android:id="@+id/tvDaysRemaining"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thời gian bảo vệ: 5 ngày"
                        android:textSize="14sp"
                        android:textColor="#FF9800"
                        android:paddingBottom="8dp"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/tvHoldUntil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bảo vệ đến: 2024-01-15"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Escrow Explanation Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:background="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ℹ️ Bảo vệ thanh toán là gì?"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#1976D2"
                        android:paddingBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="• 🔒 Tiền được giữ an toàn trong 7 ngày\n• ✅ Bạn xác nhận thanh toán khi hài lòng\n• ⚠️ Báo cáo tranh chấp nếu có vấn đề\n• ↩️ Hoàn tiền tự động nếu có tranh chấp"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:lineSpacingExtra="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <Button
                    android:id="@+id/btnReleasePayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="✅ Chấp nhận thanh toán"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_primary_background"
                    android:padding="16dp"
                    android:visibility="visible" />

                <Button
                    android:id="@+id/btnReportDispute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⚠️ Báo cáo tranh chấp"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/btn_warning_background"
                    android:padding="16dp"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
