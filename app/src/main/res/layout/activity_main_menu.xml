<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenu"
    android:background="#FFFFFF">

    <!-- Vùng chứa Fragment -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/horizontalMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Thanh menu ngang -->
    <HorizontalScrollView
        android:id="@+id/horizontalMenu"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:layout_gravity="center_vertical">

            <!-- Button: Trang chủ -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnDashboard"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/customwhitebutton"
                    android:drawableTop="@drawable/house"
                    android:text=""
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trang_ch"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Button: Giỏ hàng -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnCart"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/customwhitebutton"
                    android:drawableTop="@drawable/note"
                    android:text=""
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/b_i_ng"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>



            <!-- Button: Chat -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnChat"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/customwhitebutton"
                    android:drawableTop="@drawable/chat"
                    android:text=""
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chat"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>


            <!-- Button: Tài khoản -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUser"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/customwhitebutton"
                    android:drawableTop="@drawable/usermenu"
                    android:text=""
                    android:padding="8dp"
                    android:gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t_i_kho_n"
                    android:textSize="12sp"
                    android:textColor="#000000"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
