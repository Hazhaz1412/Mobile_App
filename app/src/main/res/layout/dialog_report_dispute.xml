<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="⚠️ Mô tả vấn đề gặp phải"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F57C00"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vui lòng mô tả chi tiết vấn đề bạn gặp phải với đơn hàng này. Thông tin này sẽ giúp chúng tôi xử lý tranh chấp một cách công bằng."
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="16dp"
        android:lineSpacingExtra="2dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập lý do tranh chấp..."
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDisputeReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollbars="vertical"
            android:maxLength="500" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ví dụ: Hàng không đúng mô tả, hàng bị hỏng, không nhận được hàng..."
        android:textSize="12sp"
        android:textColor="#999999"
        android:paddingTop="8dp"
        android:fontFamily="sans-serif-light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:background="#FFF3E0"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ℹ️ Sau khi gửi báo cáo, hệ thống sẽ xem xét trong 24-48 giờ và thông báo kết quả qua email."
            android:textSize="12sp"
            android:textColor="#E65100"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>
