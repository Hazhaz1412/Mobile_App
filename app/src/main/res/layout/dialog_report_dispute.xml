<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/m_t_v_n_g_p_ph_i"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#F57C00"
        android:paddingBottom="12dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/vui_l_ng_m_t_chi_ti_t_v_n_b_n_g_p_ph_i_v_i_n_h_ng_n_y_th_ng_tin_n_y_s_gi_p_ch_ng_t_i_x_l_tranh_ch_p_m_t_c_ch_c_ng_b_ng"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingBottom="16dp"
        android:lineSpacingExtra="2dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/nh_p_l_do_tranh_ch_p"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDisputeReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:maxLines="8"
            android:gravity="top|start"
            android:inputType="textMultiLine|textCapSentences"
            android:scrollbars="vertical"
            android:maxLength="500" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/v_d_h_ng_kh_ng_ng_m_t_h_ng_b_h_ng_kh_ng_nh_n_c_h_ng"
        android:textSize="12sp"
        android:textColor="#999999"
        android:paddingTop="8dp"
        android:fontFamily="sans-serif-light" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="16dp"
        android:background="#FFF3E0"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/sau_khi_g_i_b_o_c_o_h_th_ng_s_xem_x_t_trong_24_48_gi_v_th_ng_b_o_k_t_qu_qua_email"
            android:textSize="12sp"
            android:textColor="#E65100"
            android:lineSpacingExtra="2dp" />

    </LinearLayout>

</LinearLayout>
